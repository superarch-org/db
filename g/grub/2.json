{
  "name": "grub",
  "version": "2.12.0",
  "category": "bootloader",
  "license": "gpl3",
  "description": "GNU GRand Unified Bootloader",
  "homepage": "https://www.gnu.org/software/grub/",
  "tar": "https://ftp.gnu.org/gnu/grub/grub-${version}.tar.xz",
  "supports": {
    "kernels": [
      "linux",
      "freebsd",
      "openbsd",
      "netbsd"
    ]
  },
  "build": {
    "system": "autotools",
    "deps": [
      "gcc",
      "make",
      "bison",
      "flex",
      "python3"
    ],
    "configure": [
      "./configure --prefix=$PREFIX --sysconfdir=/etc"
    ],
    "compile": [
      "make -j$(nproc)"
    ],
    "install": [
      "make install DESTDIR=$DESTDIR"
    ]
  }
}
