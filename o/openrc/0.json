{
  "name": "openrc",
  "version": "0.55.1",
  "category": "init",
  "license": "bsd2",
  "description": "Dependency-based init system",
  "homepage": "https://github.com/OpenRC/openrc",
  "git": "https://github.com/OpenRC/openrc",
  "tar": "https://github.com/OpenRC/openrc/archive/refs/tags/${version}.tar.gz",
  "supports": {
    "kernels": [
      "linux",
      "freebsd",
      "netbsd"
    ]
  },
  "build": {
    "system": "meson",
    "deps": [
      "gcc",
      "meson",
      "ninja"
    ],
    "configure": [
      "meson setup build --prefix=$PREFIX -Dsysconfdir=/etc"
    ],
    "compile": [
      "ninja -C build"
    ],
    "install": [
      "DESTDIR=$DESTDIR ninja -C build install"
    ]
  }
}
