{
  "name": "dinit",
  "version": "1.18.1",
  "category": "init",
  "license": "apache2",
  "description": "Service manager and init system",
  "homepage": "https://davmac.org/projects/dinit/",
  "git": "https://github.com/davmac314/dinit",
  "tar": "https://github.com/davmac314/dinit/releases/download/v${version}/dinit-${version}.tar.xz",
  "supports": {
    "kernels": [
      "linux",
      "freebsd",
      "openbsd",
      "netbsd"
    ]
  },
  "build": {
    "system": "make",
    "deps": [
      "gcc",
      "make"
    ],
    "configure": [
      "./configure --prefix=$PREFIX --sysconfdir=/etc"
    ],
    "compile": [
      "make -j$(nproc)"
    ],
    "install": [
      "make install DESTDIR=$DESTDIR"
    ]
  }
}
